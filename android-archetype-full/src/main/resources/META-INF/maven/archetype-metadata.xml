<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="android-archetype-full">
<requiredProperties>
  <requiredProperty key="platform"/>
  <requiredProperty key="projectType"/>
</requiredProperties>
<fileSets>
  <fileSet filtered="true" encoding="UTF-8">
    <directory>res</directory>
    <includes>
      <include>**/*.xml</include>
    </includes>
  </fileSet>
  <fileSet filtered="false" encoding="UTF-8">
    <directory>res</directory>
    <includes>
      <include>**/*.png</include>
      <include>**/*.gif</include>
    </includes>
  </fileSet>
  <fileSet filtered="true" packaged="true" encoding="UTF-8">
    <directory>src/main/java</directory>
    <includes>
      <include>**/*.java</include>
    </includes>
  </fileSet>
  <fileSet filtered="true" encoding="UTF-8">
    <directory>src/main/resources</directory>
    <includes>
      <include>properties.xml</include>
    </includes>
  </fileSet>
  <fileSet filtered="true" packaged="true" encoding="UTF-8">
    <directory>src/test/java</directory>
    <includes>
      <include>**/*.java</include>
    </includes>
  </fileSet>
  <fileSet filtered="true" encoding="UTF-8">
    <directory/>
    <includes>
      <include>AndroidManifest.xml</include>
      <include>properties.xml</include>
    </includes>
  </fileSet>
  <fileSet filtered="true" encoding="UTF-8">
    <directory>src/test/resources</directory>
    <includes>
      <include>AndroidManifest.xml</include>
      <include>*.properties</include>
    </includes>
  </fileSet>
  <fileSet filtered="true" encoding="UTF-8">
    <directory>assets</directory>
    <includes>
      <include>**/*</include>
    </includes>
  </fileSet>
</fileSets>
</archetype-descriptor>
